<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#D4E8E6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TÍNH GIÁ XE LĂN BÁNHH"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Giá xe"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/editTxtGiaXe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Loại xe"
            android:textSize="25dp"/>

        <Spinner
            android:id="@+id/spinnerLoaiXe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Địa phương đăng ký biển số xe"
            android:textSize="25dp"/>

        <Spinner
            android:id="@+id/spinnerBienSoXe"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnTinhToan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="TÍNH TOÁN"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="9"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="Giá đàm phán"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtViewGiaDamPhan_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="end"
            android:text="789.000.000"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewPhiTruocBa"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="Phí trước bạ(10%)"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtViewPhiTruocBa_price"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="789.000"
            android:textSize="20dp"
            android:gravity="end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="9"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="Phí sử dụng đường bộ 1 năm(01 năm)"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtViewPhiSuDungDuongBo_price"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="789.000"
            android:textSize="20dp"
            android:gravity="end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="9"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="Bảo hiểm trách nhiệm quân sự(01 năm)"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtViewBaoHiem_price"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="789.000"
            android:textSize="20dp"
            android:gravity="end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="9"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="Phí đăng ký biển số"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtViewPhiDangKy_price"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="789.000"
            android:textSize="20dp"
            android:gravity="end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="9"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="Phí đăng kiểm"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtViewDangKiemPhiDangKiem_price"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="789.000"
            android:textSize="20dp"
            android:gravity="end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="9"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="Tổng cộng"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtViewTongCong_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="end"
            android:text="789.000"
            android:textColor="#0019FF"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số tiền phải trả khi lăn bánh là"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:textColor="#0019FF"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/txtViewTongCong_price_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="881.594.000"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>