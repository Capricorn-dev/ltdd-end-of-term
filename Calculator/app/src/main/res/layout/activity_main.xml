<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/showNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="100dp"
            android:gravity="right"/>
        <!--strechcolumns làm đều các thuộc tính trong row-->
        <TableLayout
            android:id="@+id/tableNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:stretchColumns="*"
            android:measureWithLargestChild="true"
            >
            <TableRow
                android:layout_weight="1">
                <Button
                    android:id="@+id/remove"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="C"/>
                <Button
                    android:id="@+id/percent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="%"/>
                <Button
                    android:id="@+id/square"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="n^2"/>
                <Button
                    android:id="@+id/add"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="+"/>

            </TableRow>
            <TableRow
                android:layout_weight="1">
                <Button
                    android:id="@+id/one"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="1"/>
                <Button
                    android:id="@+id/two"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="2"/>
                <Button
                    android:id="@+id/three"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="3"/>
                <Button
                    android:id="@+id/minus"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="-"/>


            </TableRow>
            <TableRow
                android:layout_weight="1">
                <Button
                    android:id="@+id/four"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="4"/>
                <Button
                    android:id="@+id/five"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="5"/>
                <Button
                    android:id="@+id/six"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="6"/>
                <Button
                    android:id="@+id/multiple"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="*"/>
            </TableRow>
            <TableRow
                android:layout_weight="1">
                <Button
                    android:id="@+id/seven"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="7"/>
                <Button
                    android:id="@+id/eight"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="8"/>
                <Button
                    android:id="@+id/nine"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="9"/>
                <Button
                    android:id="@+id/division"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="/"/>


            </TableRow>
            <TableRow
                android:layout_weight="1">
                <Button
                    android:id="@+id/delete"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="delete"/>
                <Button
                    android:id="@+id/zero"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="0"/>
                <Button
                    android:id="@+id/comma"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text=","/>
                <Button
                    android:id="@+id/equal"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="="/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>